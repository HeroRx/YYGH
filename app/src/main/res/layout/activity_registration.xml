<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/red"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:text="填写信息"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <ScrollView
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/phonell"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/red"
                        android:textSize="13sp"
                        android:text="名 字:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/et_name"
                        android:textSize="13sp"
                        android:textColor="#ff424242"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right"
                        android:padding="5dp"
                        android:hint="请输入名字(必填)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/right_arrow"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <View
                    android:background="@color/orange"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/red"
                        android:textSize="13sp"
                        android:text="性 别:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <include
                        layout="@layout/layout_sex"/>
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/right_arrow"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>

                </LinearLayout>

                <View
                    android:background="@color/orange"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/red"
                        android:textSize="13sp"
                        android:text="出生日期:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/et_birth"
                        android:textSize="13sp"
                        android:textColor="#ff424242"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right"
                        android:padding="5dp"
                        android:hint="请输入出生日(尽可能详细)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/right_arrow"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="@color/orange"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/red"
                        android:textSize="13sp"
                        android:text="身份证号码:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/et_idcard"
                        android:textSize="13sp"
                        android:textColor="#ff424242"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right"
                        android:padding="5dp"
                        android:hint="请输入身份证号码(选填)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/right_arrow"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <View
                    android:background="@color/orange"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/red"
                        android:textSize="13sp"
                        android:text="手机号:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:textSize="13sp"
                        android:textColor="#ff424242"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right"
                        android:padding="5dp"
                        android:hint="请输入手机号(必填)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/right_arrow"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <View
                    android:background="@color/orange"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/red"
                        android:textSize="13sp"
                        android:text="现住址:"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />

                    <EditText
                        android:id="@+id/et_address"
                        android:textSize="13sp"
                        android:textColor="#ff424242"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right"
                        android:padding="5dp"
                        android:hint="请输入现住址(必填)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:background="@color/orange"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/red"
                        android:textSize="13sp"
                        android:text="过敏药物:"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />

                    <EditText
                        android:id="@+id/et_allergy"
                        android:textSize="13sp"
                        android:textColor="#ff424242"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right"
                        android:padding="5dp"
                        android:hint="请输入过敏药物(必填)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="@color/orange"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


            </LinearLayout>

            <LinearLayout
                android:paddingTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="15.0dp"
                    android:contentDescription="@string/app_name"
                    android:drawableLeft="@drawable/tip_icon"
                    android:drawablePadding="8.0dip"
                    android:text="资料一旦提交后就不允许修改"
                    android:textColor="@color/red"
                    android:textSize="13sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_commit"
                android:background="@color/orange"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="30.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="28.0dip"
                android:padding="10dp"
                android:text="提 交"
                android:textColor="@color/red"
                android:textSize="15sp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
